{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
    "packages": [
      "python@3.13",
      "uv@0.6.10",
      "cowsay"
    ],
    "shell": {
      "init_hook": [
        "cowsay 'Welcome to devbox!'"
      ],
      "scripts": {
        "test": [
          "echo \"Error: no test specified\" && exit 1"
        ],
        "test-force-succeed": [
          "echo \"Dummy test succeeded!\" && exit 0"
        ]
      }
    }
  }
